<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scattered_cloudss"
    android:orientation="vertical"
    android:id="@+id/appSV"
    tools:context="com.warriors.rubayet.bdweather.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BD Weather"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your Location from below"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
    </LinearLayout>
<LinearLayout
    android:paddingTop="10dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <TextView
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        android:text="Division: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        />
    <Spinner
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/divisionSpinner"
        android:layout_height="match_parent">
    </Spinner>
    <TextView
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".6"
        android:text="District: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        />
    <Spinner
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/zillaSpinner"
        android:layout_height="match_parent">
    </Spinner>

</LinearLayout>
        <LinearLayout
            android:layout_weight=".7"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationTV"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_weight=".6"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weather Information"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/iconIV"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tempTV"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="50sp"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="0dp" />
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/descriptionTV"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_weight="1.5"
                    android:layout_height="0dp" />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@android:color/black"
                android:text="Last Updated: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/timeTV"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_weight="3.3"
                android:textStyle="italic"
                android:layout_height="wrap_content" />
            <Button
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="update"
                android:textSize="9sp"
                android:id="@+id/updateBTN"
                android:onClick="onClickUpdate"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/tower"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/placeTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/sunrise"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/sunriseTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/sunset"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/sunsetTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/wind"
                />
            <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/windSpeedTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:src="@drawable/humidity"
                />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/humidityTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:src="@drawable/pressure"
                />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/pressureTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:src="@drawable/maxtemp"
                />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/maxTempTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:src="@drawable/mintemp"
                />
            <TextView
                android:textColor="@android:color/black"
                android:gravity="center"
                android:id="@+id/minTempTV"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_weight=".6"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Forecast (5 Days)"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <ListView
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="265dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/forecastLV"
        />
        <TextView
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: Yahoo Weather and Open Weather"
            android:textStyle="normal"
            android:textSize="12sp"
            android:layout_gravity="center"
            />


    </LinearLayout>
    </LinearLayout>
</ScrollView>
