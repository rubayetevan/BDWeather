<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:textStyle="bold"
                android:textSize="16sp"
                android:hint="Day"
                android:text="Day: "
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Day"
                android:textSize="16sp"
                android:id="@+id/dayLTV"
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".9"
                android:textStyle="bold"
                android:textSize="16sp"
                android:hint="Day"
                android:text="Date: "
                android:textColor="@android:color/black"
                />
            <TextView
                android:layout_width="0dp"
                android:textSize="16sp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:hint="Date"
                android:id="@+id/dateLTV"
                android:textColor="@android:color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/maxtemp"
                />
            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:hint="tempHigh"
                android:id="@+id/tempHighLTV"
                android:textColor="@android:color/black"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:src="@drawable/mintemp"
                />
            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:hint="tempLow"
                android:id="@+id/tempLowLTV"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/sky_clear"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:hint="Condition"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/conditionLTV"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

</LinearLayout>